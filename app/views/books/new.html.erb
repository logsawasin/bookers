  <h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book do |f| %>
<div class="field">
  <label for="book_title">Title</label>
  <br><%= f.text_field :title %>
</div>
<div class="field">
  <label for="book_body">body</label>
  <br><%= f.text_area :body %>
</div>
<div class="action">
  <%= f.submit 'Create Book' %>
</div>
<% end %>
    